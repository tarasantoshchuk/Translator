<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTransInfoSrcLang"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTransInfoTrgtLang"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtTransInfoTrgtWord"
        android:layout_below="@+id/txtTransInfoTrgtLang"
        android:layout_alignRight="@+id/txtTransInfoTrgtLang"
        android:layout_alignEnd="@+id/txtTransInfoTrgtLang"
        android:layout_toRightOf="@+id/txtCenter"
        android:layout_toEndOf="@+id/txtCenter"
        android:gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtTransInfoSrcWord"
        android:layout_below="@+id/txtTransInfoSrcLang"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/txtCenter"
        android:layout_toStartOf="@+id/txtCenter" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCenter"
        android:layout_alignTop="@+id/txtTransInfoTrgtWord"
        android:layout_centerHorizontal="true" />
</RelativeLayout>